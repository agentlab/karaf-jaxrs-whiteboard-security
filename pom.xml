    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <jackson.version>2.10.3</jackson.version>
        <osgi.version>6.0.0</osgi.version>
        <felix.plugin.version>4.1.0</felix.plugin.version>
