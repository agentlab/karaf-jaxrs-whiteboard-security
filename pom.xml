    <version>0.0.1-SNAPSHOT</version>
    <name>AgentLab :: REST :: SECURITY :: PARENT</name>
    <packaging>pom</packaging>

    <modules>
        <module>plugins</module>
        <module>features</module>
        <module>tests</module>
